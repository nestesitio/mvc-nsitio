<?xml version="1.0" encoding="UTF-8"?>
<root>
  <show>
    <fields comment="Fields for render">
      <htmpageid field="htm_page.id" show="false" filter="false">
        <label key="id" />
      </htmpageid>
      <htmpagehtmid field="htm_page.htm_id" range="multiple" show="false" filter="true">
        <label key="id" />
      </htmpagehtmid>
      <htmpagelangstld field="htm_page.langs_tld" range="multiple" show="false" filter="true">
        <label key="langs" />
      </htmpagelangstld>
      <htmpagetitle field="htm_page.title" show="true" filter="true">
        <label key="title" />
      </htmpagetitle>
      <htmpageslug field="htm_page.slug" show="true" filter="true">
        <label key="slug" />
      </htmpageslug>
      <htmpageheading field="htm_page.heading" show="true">
        <label lang="en">Heading</label>
        <label lang="pt">Subtitulo</label>
      </htmpageheading>
      <htmtxtid field="htm_txt.id" show="false">
        <label key="id" />
      </htmtxtid>
      <htmtxthtmpageid field="htm_txt.htm_page_id" show="false">
        <label key="id" />
      </htmtxthtmpageid>
      <htmtxttxt field="htm_txt.txt" show="true">
        <label lang="en">Txt</label>
        <label lang="pt">Texto</label>
      </htmtxttxt>
      <htmpageupdatedat field="htm_page.updated_at" range="range" show="true" filter="true" type="DateInput">
        <label lang="en">Updated At</label>
        <label lang="pt">Actualização</label>
      </htmpageupdatedat>
    </fields>
    <buttons comment="Commands for form and show">
      <saveform class="glyphicon glyphicon-save" action="admin/bindtxt_homecontent" auth="4">
        <label key="save" />
      </saveform>
      <closeform class="glyphicon glyphicon-remove" auth="1">
        <label key="close" />
      </closeform>
    </buttons>
  </show>
</root>
