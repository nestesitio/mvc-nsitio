<?xml version="1.0" encoding="UTF-8"?>
<root>
  <show>
    <fields comment="Fields for render">
      <htmlayoutid field="htm_layout.id" show="false" filter="false">

        <label key="id" />
      </htmlayoutid>
      <htmlayoutname field="htm_layout.name" show="true" filter="true">

        <label key="name" />
      </htmlayoutname>
    </fields>
    <buttons comment="Commands for form and show">
      <saveform class="glyphicon glyphicon-save" action="edit_layouts" auth="1">

        <label key="save" />
      </saveform>
      <editform class="glyphicon glyphicon-pencil" action="edit_layouts" auth="1">

        <label key="edit" />
      </editform>
      <resetform class="glyphicon glyphicon-refresh" auth="1">
        <label lang="en">Reset</label>
        <label lang="pt">Reset</label>
      </resetform>
      <delform class="glyphicon glyphicon-trash" action="del_layouts" auth="1">

        <label key="delete" />
      </delform>
      <closeform class="glyphicon glyphicon-remove" auth="1">

        <label key="close" />
      </closeform>
    </buttons>
  </show>
  <grid identification="layouts" paging="25" fieldid="htm_layout.id">
    <columns comment="Columns for grid">
      <htmlayoutid field="htm_layout.id" class="id" sort="true">

        <label key="id" />
      </htmlayoutid>
      <htmlayoutname field="htm_layout.name" class="name" sort="true">

        <label key="name" />
      </htmlayoutname>
    </columns>
    <tools comment="buttons in row">
      <edit action="configs/edit_layouts" class="fa-pencil" id="htm_layout.id" auth="1">

        <label key="edit" />
      </edit>
      <show action="configs/show_layouts" class="fa-eye" id="htm_layout.id" auth="1">

        <label key="show" />
      </show>
      <del action="configs/del_layouts" class="fa-trash-o" id="htm_layout.id" auth="1">

        <label lang="pt">Del</label>
      </del>
    </tools>
    <buttons comment="buttons ion top">
      <new action="configs/new_layouts" class="glyphicon glyphicon-plus" auth="1">

        <label key="insert" />
      </new>
      <csv action="configs/csv_layouts" class="glyphicon glyphicon-export" auth="1">
        <label lang="en">Csv</label>
        <label key="export" />
      </csv>
    </buttons>
  </grid>
</root>
