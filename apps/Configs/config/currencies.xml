<?xml version="1.0" encoding="UTF-8"?>
<root>
  <show>
    <fields comment="Fields for render">
      <id field="currency.curr" filter="true" show="true">

        <label key="id" />
      </id>
      <name field="currency.curr" filter="true" show="true">

        <label key="name" />
      </name>
    </fields>
    <buttons comment="Commands for form and show">
      <saveform class="glyphicon glyphicon-save" action="configs/edit_currencies" auth="1">

        <label lang="pt">Guardar</label>
      </saveform>
      <editform class="glyphicon glyphicon-pencil" action="configs/edit_currencies" auth="1">

        <label key="edit" />
      </editform>
      <resetform class="glyphicon glyphicon-refresh" auth="1">
        <label lang="en">Reset</label>
        <label lang="pt">Reset</label>
      </resetform>
      <delform class="glyphicon glyphicon-trash" action="configs/del_currencies" auth="1">

        <label key="delete" />
      </delform>
      <closeform class="glyphicon glyphicon-remove" auth="1">

        <label key="close" />
      </closeform>
    </buttons>
  </show>
  <grid identification="currencies" paging="25" fieldid="currency.curr">
    <columns comment="Columns for grid">
      <id field="currency.curr" class="id" sort="true">

        <label key="id" />
      </id>
      <name field="currency.curr" class="name" sort="true">

        <label key="name" />
      </name>
    </columns>
    <tools comment="buttons in row">
      <edit action="configs/edit_currencies" class="fa-pencil" id="currency.curr" auth="1">

        <label key="edit" />
      </edit>
      <show action="configs/show_currencies" class="fa-eye" id="currency.curr" auth="1">

        <label key="show" />
      </show>
      <del action="configs/del_currencies" class="fa-trash-o" id="currency.curr" auth="1">

        <label lang="pt">Del</label>
      </del>
    </tools>
    <buttons comment="buttons ion top">
      <new action="configs/new_currencies" class="glyphicon glyphicon-plus" auth="1">

        <label key="insert" />
      </new>
      <csv target="blank" action="configs/csv_currencies" class="glyphicon glyphicon-export" auth="1">
        <label lang="en">Csv</label>
        <label key="export" />
      </csv>
    </buttons>
  </grid>
</root>
